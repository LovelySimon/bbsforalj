<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alj.mapper.UserMessageMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.alj.pojo.UserMessage">
        <id column="message_id" property="messageId" />
        <result column="received_user_id" property="receivedUserId" />
        <result column="article_id" property="articleId" />
        <result column="article_title" property="articleTitle" />
        <result column="comment_id" property="commentId" />
        <result column="send_user_id" property="sendUserId" />
        <result column="send_nick_name" property="sendNickName" />
        <result column="message_type" property="messageType" />
        <result column="message_content" property="messageContent" />
        <result column="status" property="status" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        message_id, received_user_id, article_id, article_title, comment_id, send_user_id, send_nick_name, message_type, message_content, status, create_time
    </sql>

    <update id="updateMessageStatus">
        update user_message
        set status=#{status}
        where received_user_id = #{receivedUserId}
        and message_type = #{messageType}
    </update>

    <select id="getuserMessageCount" resultType="java.util.Map">
        select message_type messageType,count(1) count
        from user_message
        where received_user_id = #{userId} and status = 1
        group by message_type
    </select>

</mapper>
